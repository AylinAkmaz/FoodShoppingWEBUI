@using FoodShoppingWEBUI.Core.DTO;
@model List<FoodCategoryDTO>

@{
    ViewData["Title"] = "FoodCategory";
    Layout = "~/Areas/AdminPanel/Views/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yemek Kategorileri</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-block btn-info" data-toggle="modal" data-target="#modal-YeniYemekKategori">Ekle</button>

        </div>
    </div>
    <div class="card-body">

        @await Component.InvokeAsync("FoodCategories",Model)



    </div>

</div>

<div class="modal fade" id="modal-YeniYemekKategori">
    <div class="modal-dialog modal-YeniYemekKategori">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yeni Yemek Kategori</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtFoodCategoryAd_Add">Yemek Kategori Adı</label>
                    <input type="text" class="form-control" id="txtFoodCategoryAd_Add">
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" id="btnAddYemekKategori">Kaydet</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
